// CodeChef Starters 27 Division 2 (Rated)



#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    string s;
	    cin>>s;
	    int count = 1;
	    char cur = s[0];
	    for(int i=1;i<n;i++)
	    {
	        if(s[i]!=cur)
	        {
	            count++;
	            cur = s[i];
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
